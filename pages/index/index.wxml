<!--index.wxml-->
<import src="../template/header/header.wxml"/>
<view class="body"> 
  <view class="header" >
    <view class="title" >HERE.就近</view>
    <view class="search">
      <image   class="warn-icon" bindtap="clickWarn"
          mode="aspectFill" src="/pages/images/warn.png">
      </image> 
      <view class="input-rect" bindtap="clickSearch">
        <image   class="search-icon"
          mode="scaleToFill" src="/pages/images/search.png">
        </image> 
        <input class="input" placeholder="输入地名、商家"  placeholder-class="placeholder-class" />
        <image   class="close-icon" 
          mode="scaleToFill" src="/pages/images/close.png">
        </image> 
      </view>
    </view>
 
    <image   class="edit-icon" bindtap="clickEdit"
          mode="aspectFill" src="/pages/images/edit.png">
    </image> 
  </view>
  <view class="clear"></view>
  <view class="items">
    <view class="column">
      <view class="item" wx:key="id" wx:for="{{notes.coloums1}}" bindtap="clickItem" data-type="person"  data-item-id="{{item.id}}">
        <view class="item-header">
          <image   class="person-header-img"
              mode="scaleToFill" src="{{item.avatar}}">
          </image> 
          <view class="person-nickname">{{item.nickName}}</view>
          <view class="person-distanct">500m</view>
        </view>
        <view class="clear"></view>
        <view class="item-body">
          <image   class="item-body-img" wx:if="{{item.photo}}"
              mode="scaleToFill" src="{{item.photo}}">
          </image> 
          <view class="item-body-text" wx:if="{{item.content}}">
            {{item.content}} 
          </view>
        </view>
      </view>
    </view>
    <view class="column">
      <!--
      <view class="item shop" bindtap="clickItem" data-type="shop"   data-item-id={{item.id}}>
        <view class="distanct">
          500m
        </view>
        <image   class="item-img"
              mode="scaleToFill" src="/pages/images/shop.png">
        </image> 
        <view class="footer">
        </view>
        <text class="title">刘得华健身体验房</text>
      </view>-->
      <view class="item" wx:key="id" wx:for="{{notes.coloums2}}" bindtap="clickItem" data-type="person"  data-item-id="{{item.id}}">
        <view class="item-header">
          <image   class="person-header-img"
              mode="scaleToFill" src="{{item.avatar}}">
          </image> 
          <view class="person-nickname">{{item.nickName}}</view>
          <view class="person-distanct">500m</view>
        </view>
        <view class="clear"></view>
        <view class="item-body">
          <image   class="item-body-img" wx:if="{{item.photo}}"
              mode="scaleToFill" src="{{item.photo}}">
          </image> 
          <view class="item-body-text" wx:if="{{item.content}}">
            {{item.content}} 
          </view>
        </view>
      </view>
    </view>    
  </view>
</view>
