/**index.wxss**/
.header{
  background-image:linear-gradient(0deg, #2c2c30 1%, #0f1012 100%);
  width:750rpx;
  height:90rpx;
}
.search{
   padding-top: 10rpx;
}
.warn-icon{
  margin-top: 8rpx;
  margin-left: 26rpx;
  margin-right: 34rpx;
  float: left;
}
.search-icon{
  margin: 9rpx 25rpx 10rpx 21rpx;
  float: left;
}
.close-icon{
  float: left;
  margin: 10rpx 26rpx 10rpx 0;
}
.edit-icon{
  float: right;
  margin-right: 25rpx;
  margin-left: 37rpx;
  margin-top: 10rpx;
}
.circle{
  float: left;
  padding-top : 10rpx ;
  width:531rpx;
  overflow: hidden;
  height:55rpx;
  text-align: center;
}
.circle-text{
  background:#939395;
  border-radius:27.5rpx;
  min-width:200rpx;
  height:100%;
  box-sizing: border-box;
  padding: 14rpx 55rpx 14rpx 55rpx;
  color: #fff;
  font-size:30rpx ;
  display: inline-block;
  overflow: hidden;
}
.circle-text-in{
  max-width:350rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-break:break-all;
  height:100%;
  border: 1px solid red;
  word-wrap:break-word;
  float: left;
}
.location-icon{
  float: left;
}
.items{
  margin: 39rpx 11rpx 0 31rpx;
}
.items .item{
  box-sizing: border-box;
  background:#ffffff;
  border:1rpx solid #d0d0d0;
  box-shadow:0 1rpx 2rpx 0 rgba(153,153,153,0.40);
  height:100%;
  width:338rpx;
  padding: 22rpx 17rpx 22rpx 17rpx;
  margin-bottom: 21rpx;
  overflow: hidden;
  z-index: 99;
}
.items .item.shop{
  padding: 0;
  position: relative;
}
.items  .column{
  height: 100%;
  width: 50%;
  float: left;
}
 .person-header-img{
  width:38rpx;
  height:38rpx;
  border-radius:100%;
  float: left;
 }
 .person-nickname{
  font-size:20rpx;
  color:#b8b8b8;
  letter-spacing:0;
  text-align:left;
  float: left;
  margin: 8rpx 17rpx 8rpx 17rpx;
  width: 155rpx;
 }
 .person-distanct{
  font-size:20rpx;
  color:#b8b8b8;
  letter-spacing:0;
  text-align:rigth;
  float: left;
  margin: 8rpx 0rpx 8rpx 22rpx;
  width: 54rpx;
 }
 .shop .distanct{
   position: absolute;
   top:13rpx;
   left: 22rpx;
    font-size:20rpx;
    color:#ffffff;
    letter-spacing:0;
    text-align:right;
 }
 .shop .footer{
   position: absolute;
   opacity:0.6;
  background:#000000;
  width:350rpx;
  height:72rpx;
  left: 0rpx;
  bottom: 0;
 }
  .shop  .title{
    position: absolute;
    font-size:32rpx;
    color:#ffffff;
    left: 0rpx;
