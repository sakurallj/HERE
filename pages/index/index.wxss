    letter-spacing:0;
    line-height:44rpx;
    text-align:left;
    margin: 14rpx  47rpx;
    width: 256rpx;
    overflow: hidden;
    height:44rpx;
 }
.item-body-img{
  background:#d8d8d8;
  width:300rpx;
  height:150rpx;
  margin-top: 30rpx;
}
.shop .item-img{
  margin: 0;
  width:100%;
  max-height: 338rpx;
}
.item-body-text{
  font-size:28rpx;
  color:#666666;
  letter-spacing:0;
  line-height:44rpx;
  text-align:left;
  margin-top: 16rpx;
}
.item-groups{
