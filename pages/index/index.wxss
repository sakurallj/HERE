/**index.wxss**/
.header{
  background-image:linear-gradient(0deg, #2c2c30 1%, #0f1012 100%);
  width:750rpx;
  height:158rpx;
}
.search{
   margin-top: 48rpx;
   margin-bottom: 15rpx;
}
.warn-icon{
  margin-top: 8rpx;
  margin-left: 26rpx;
  margin-right: 34rpx;
  float: left;
}
.search-icon{
  margin: 9rpx 25rpx 10rpx 21rpx;
  float: left;
}
.close-icon{
  float: left;
  margin: 10rpx 26rpx 10rpx 0;
}
.edit-icon{
  float: left;
  margin-right: 25rpx;
