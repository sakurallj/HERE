  margin-top: 10rpx;
}
.search .input-rect{
  background:#ffffff;
  border:1rpx solid #e6e6ea;
  border-radius:10rpx;
  width:551rpx;
  height:55rpx;
  float: left;
}
.search .input-rect .input{
  height: 38rpx;
  width: 411rpx;
  overflow: hidden;
  float: left;
}
.search .input-rect .placeholder-class{
  font-size:26rpx;
  color:#999999;
  letter-spacing:0.27rpx;
  text-align:left;
}
.items{
  margin: 39rpx 21rpx 0 21rpx;
}
.items .item{
  box-sizing: border-box;
  background:#ffffff;
  border:1rpx solid #d0d0d0;
  box-shadow:0 1rpx 2rpx 0 rgba(153,153,153,0.40);
  height:100%;
  width:338rpx;
  padding: 22rpx 17rpx 22rpx 17rpx;
  margin-bottom: 21rpx;
  overflow: hidden;
}
.items .item.shop{
  padding: 0;
  position: relative;
}
.items  .column{
  height: 100%;
  width: 50%;
  float: left;
}
 .person-header-img{
  width:38rpx;
  height:38rpx;
  border-radius:100%;
  float: left;
 }
 .person-nickname{
  font-size:20rpx;
  color:#b8b8b8;
  letter-spacing:0;
  text-align:left;
  float: left;
  margin: 8rpx 17rpx 8rpx 17rpx;
  width: 155rpx;
 }
 .person-distanct{
  font-size:20rpx;
  color:#b8b8b8;
  letter-spacing:0;
