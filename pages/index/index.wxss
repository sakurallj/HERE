  width: 54rpx;
 }
 .shop .distanct{
   position: absolute;
   top:13rpx;
   left: 22rpx;
    font-size:20rpx;
    color:#ffffff;
    letter-spacing:0;
    text-align:right;
 }
 .shop .footer{
   position: absolute;
   opacity:0.6;
  background:#000000;
