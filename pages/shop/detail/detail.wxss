.store-head{
    background-color: #fff;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.store-head-main{
    text-align: center;
    padding: 70rpx 0;
    box-sizing: border-box;
}
.store-head-main-first{
    font-size:32rpx;
    color:#333333;
    letter-spacing:0;
    box-sizing: border-box;
}
.store-head-main-second{
    font-size:28rpx;
    color:#e3e3e3;
    letter-spacing:0;
    padding-top: 15rpx;
    box-sizing: border-box;
}
.store-head-main-second-font{
    display: inline-block;
    padding-top: 15rpx;
    box-sizing: border-box;
}
.store-head-main-second-font:before{
    content: "";
    display: inline-block;
    background: url("/pages/images/store-mark-left.png")no-repeat center;
    background-size: 100% 100%;
    width: 26rpx;
    height: 24rpx;
    position: absolute;
    left: -51rpx;
    top: 0;
    box-sizing: border-box;
}
.store-head-main-second-font:after{
    content: "";
    display: inline-block;
    background: url("/pages/images/store-mark-right.png")no-repeat center;
    background-size: 100% 100%;
    width: 26rpx;
    height: 24rpx;
    position: absolute;
    right: -51rpx;
    top: 0;
    box-sizing: border-box;
}



.store-head-bottom{
    padding: 15rpx 0;
    height: 88rpx;
    border-top: 1rpx solid rgba(184, 184, 184, 0.3);
    box-sizing: border-box;
}
.store-head-bottom-local{
    background: url("/pages/images/program-local.png")no-repeat left;
    background-size: 30rpx 38rpx;
    line-height: 58rpx;
    font-size:24rpx;
    color:#b8b8b8;
    letter-spacing:0;
    text-align:left;
    padding-left: 60rpx;
    width: 560rpx;
    border-right: 1rpx solid rgba(184, 184, 184, 0.3);
    padding-right: 15rpx;
    box-sizing: border-box;
    float: left;
}
.store-head-bottom-local-range{
    float: right;
}
.store-head-bottom-phone{
    height: 58rpx;
    float: right;
    width: 127rpx;
    box-sizing: border-box;
}


.store-main{
    background-color: #fff;
    margin-top: 20rpx;
    box-sizing: border-box;
}
.store-main-title{
    font-size:28rpx;
    color:#666666;
    letter-spacing:0;
    text-align:left;
    padding: 30rpx 30rpx 0 30rpx;
    box-sizing: border-box;
}
.store-main-content{
    overflow-x: scroll;
}
.store-main-img-group{
    white-space: nowrap;
    padding: 30rpx;
    box-sizing: border-box;
}
.store-main-img{
    float: left;
    width:225rpx;
    height:225rpx;
    margin-right: 35rpx;
    box-sizing: border-box;
    background-size: cover;
    overflow: hidden;
}
.store-main-im::last-child{
    margin-right: 0;
}
.store-bottom{
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.store-bottom-title{
    font-size:28rpx;
    color:#666666;
    letter-spacing:0;
    text-align:left;
    padding: 30rpx 0;
    box-sizing: border-box;
}
.store-bottom-option{
    font-size:28rpx;
    color:#999999;
    letter-spacing:0;
    text-align:left;
    padding: 30rpx 0;
    padding-left: 14rpx;
    border-bottom: 2rpx solid rgba(184,184,184,0.30);
    line-height: 42rpx;
    background-size: 48rpx;
    box-sizing: border-box;
}
.store-bottom-option:nth-last-of-type(1){
    border-bottom: none;
}