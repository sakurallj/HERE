<import src="../../template/notes/note-item.wxml"/>
<view class="body">
    <view class="content">
        <view class="detail-head">
            <view class="detail-head-main">
                <view class="detail-head-main-first">
                    <view class="float-left">
                        <image   class="seller-bell" catchtap="clickWarn" 
                            mode="aspectFill" src="/pages/images/seller-bell.png">
                        </image> 
                        <view class="warn-new" wx:if="{{haveNewMessage}}"></view> 
                    </view>
                    <image   class="shop-header person-header" 
                        mode="aspectFill" src="{{shop.image}}">
                    </image> 
                    <image   class="seller-edit" bindtap="clickEdit"
                        mode="aspectFill" src="/pages/images/seller-edit.png">
                    </image> 
                </view>
                <view class="detail-head-main-second">
                    <view class="detail-head-main-second-font text-ellipsis">{{shop.name}}</view>
                </view>
            </view>
        </view>
        <view class="detail-main">
             <view scroll-y="true" class="items" >
                <view>
                    <view class="column">
                    <block  wx:key="id" wx:for="{{notes.coloums1}}">
                        <view class="item shop" wx:if="{{item.ispartner==1}}" bindtap="clickItem" data-type="shop"   data-item ="{{item }}">
                        <view class="distanct">
                            {{item.meter}}
                        </view>
                        <image   class="item-img"
                                mode="scaleToFill" src="{{item.fdLogo}}">
                        </image> 
                        <view class="footer">
                        </view>
                        <text class="title">{{item.fdName}}</text>
                        </view>
                        <view class="item-groups" wx:else>
                        <view class="item " bindtap="clickItem" data-type="person" data-item ="{{item }}" >
                            <template is="note-item"  data="{{...item}}"/>
                        </view>
                        <view class="item item-after"  wx:if="{{item.commentnum>0}}" bindtap="clickItem" data-type="person" data-item ="{{item }}">
                            <template is="note-item"  data="{{...item}}"/>
                        </view>
                        </view>
                    </block>
                    </view>
                    <view class="column">
                    
                    <block  wx:key="id" wx:for="{{notes.coloums2}}">
                        <view class="item shop" wx:if="{{item.ispartner==1}}" bindtap="clickItem" data-type="shop"   data-item ="{{item }}">
                        <view class="distanct">
                            {{item.meter}}
                        </view>
                        <image   class="item-img"
                                mode="scaleToFill" src="{{item.fdLogo}}">
                        </image> 
                        <view class="footer">
                        </view>
                        <text class="title">{{item.fdName}}</text>
                        </view>
                        <view class="item-groups" wx:else>
                            <view class="item " bindtap="clickItem" data-type="person"  data-item ="{{item }}">
                            <template is="note-item"  data="{{...item}}"/>
                            </view>
                            <view class="item item-after" bindtap="clickItem" data-type="person"  data-item ="{{item }}" wx:if="{{item.commentnum>0}}">
                                <template is="note-item"  data="{{...item}}"/>
                            </view>
                        </view>
                    </block>
                    </view>  
                    <view class="clear"></view>
                </view>
                <view class="reply-more"  bindtap="loadMore" wx:if="{{hasMore}}" >
                    <view class="loading">
                        <image   class="loading-icon" 
                        mode="aspectFill" src="/pages/images/loading.gif">
                        </image> 
                        <view class="loading-text">加载中...</view>
                    </view>
                </view>
                <view class="not-more"  wx:if="{{!isFirstLoadEmpty&&isLoadEmpty}}">
                    没有更多纸条了，你也来写一纸留言吧~
                </view>
            </view>
        </view>
        <view class="clear"></view>
       
    </view>
    <view  wx:if="{{isFirstLoadEmpty&&notes.coloums1.length==0&&notes.coloums2.length==0}}" class="none-resp">
        还没有纸条，贴一张试试~
    </view>
</view>