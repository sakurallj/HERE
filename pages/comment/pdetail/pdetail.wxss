    transition: margin-top 0.2s;
}
.body{
    
}
.content{
    padding-bottom: 124rpx;
}
.content-main{
    position: absolute;
  
}
.detail-main{
    width: 750rpx;
    padding: 45rpx 25rpx 30rpx 25rpx;
    background-color: #fff;
    box-sizing: border-box;
}
.detail-main-header{

}
.detail-main-header-head{
    float: left;
    width: 64rpx;
    height: 64rpx;
    border-radius: 64rpx;
}
.detail-main-header-name-date{
    line-height: 32rpx;
    float: left;
    padding-left: 25rpx;
}
.detail-main-header-name{
    font-size:28rpx;
    color:#333333;
    letter-spacing:0;
    text-align:left;
