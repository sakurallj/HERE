.detail-main-header-date{
    padding-top: 10rpx;
    font-size:24rpx;
    color:#b8b8b8;
    letter-spacing:0;
}
.detail-main-header-range{
    font-size:24rpx;
    color:#333333;
    letter-spacing:0;
    text-align:right;
}
.detail-main-img-group{
    padding-top: 40rpx;
}
.detail-main-img-bg{
    width: 223.333333333333333rpx;
    height: 223.333333333333333rpx;
    float: left;
    margin: 0 5rpx;
    margin-bottom: 12rpx;
}
.detail-main-img-bg img{
    width: 750rpx;
}
.detail-main-content{
    padding-top: 20rpx;
    font-size:28rpx;
    color:#666666;
    letter-spacing:0;
    line-height:44rpx;
    text-align:left;
}
.detail-reply{
    background-color: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
}
.detail-reply-option{
    padding: 25rpx 0;
    border-bottom: 2rpx solid rgba(184,184,184,0.30);
}
.detail-reply-title{
    font-size:28rpx;
    color:#666666;
    letter-spacing:0;
    text-align:left;
    padding: 20rpx 0;
}
.detail-reply-option-header{
    padding-bottom: 15rpx;
}
.detail-reply-option-head{
    float: left;
    width: 48rpx;
    height: 48rpx;
    border-radius: 48rpx;
}
.detail-reply-option-name-date{
    float: left;
    line-height: 24rpx;
    padding-left: 25rpx;
}
.detail-reply-option-name{
    font-size:24rpx;
    color:#333333;
    letter-spacing:0;
    text-align:left;
}
.detail-reply-option-date{
    font-size:22rpx;
    color:#b8b8b8;
    letter-spacing:0;
    padding-top: 10rpx;
}
.detail-reply-option-content{
    font-size:28rpx;
    color:#666666;
    letter-spacing:0;
    line-height:44rpx;
    text-align:left;
}
.detail-bottom{
    position: fixed;
    bottom: 0;
    background:#f8f9fb;
    box-shadow:0 -2rpx 4rpx 0 rgba(184,184,184,0.30);
    width:100%;
    height:104rpx;
    padding: 25rpx 30rpx 0 30rpx;
    box-sizing: border-box;
    z-index: 99;
}
.detail-input{
    background:#ffffff;
    border:1rpx solid #e4e4e4;
    border-radius:10rpx;
    width:600rpx;
    height:54rpx;
    font-size: 24rpx;
    float: left;
    padding-left: 29rpx;
    outline: none;
    box-sizing: border-box;
}
.detail-input-submit{
    font-size:28rpx;
    color:#a98b59;
    letter-spacing:0;
    line-height: 54rpx;
    float: right;
    box-sizing: border-box;
}
.store-main-img-group{
    white-space: nowrap;
    
    box-sizing: border-box;
}
.store-main-img{
    float: left;
    width:225rpx;
    height:225rpx;
    margin-right: 35rpx;
    box-sizing: border-box;
    background-size: cover;
    overflow: hidden;
}
.store-main-im::last-child{
    margin-right: 0;
}
.reply-more{
    padding: 57rpx 0 40rpx 0;
    font-size:24rpx;
    color:#666666;
    letter-spacing:0;
    text-align:center;
}
.detail-reply-option-content{
    display: inline-block;
}
.detail-reply-option-content-at{
    display: inline-block;
    color:#b8b8b8;
    margin-right: 10rpx;
}
.program-write-local-text{
    line-height: 38rpx;
    padding-left: 5rpx;
    color: #b8b8b8;
    font-size: 24rpx;
    float: left;
    max-width: 500rpx;
    overflow:hidden;
    height: 38rpx;
    text-overflow :   ellipsis ;
    white-space:nowrap; 
}
.program-write-local{
    width: 30rpx;
    height: 38rpx;
    float: left;
}
.detail-main-image-group{
    position: relative;
    padding: 30rpx 0 0 0;
}
swiper {
    height:350rpx;
    
}
.swiper-num{
    position: absolute;
    bottom: 50rpx;
    right: 20rpx;
    background: rgba(0,0,0,.5);
    height: 38rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: #fff;
    text-align: center;
    font-size: 18rpx;
    border-radius: 6rpx;
}
.location-text{
    padding-top: 20rpx;
}


.store-main-im{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}
.store-main-im-holder{
  position: absolute;
  left: 0;
  top: 0;
  opacity: 1
}
.store-main-im-loaded{
  opacity: 1;
}

.store-main-im-holder-loaded{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}

.cannot-send{
    color:#999999;
}