.not-location .cry-icon{
    display: inline-block;
    margin-top: 40%;
}
.not-location{
    text-align: center;
    font-size: 26rpx;
    color:#888888;
}
.not-location .not-location-text{
    margin:0 auto;
    margin-top: 30rpx;
    width: 650rpx;
    line-height: 50rpx;
}
.not-location .not-location-reload-btn{
    margin: 0 auto;
    margin-top: 30rpx;
    background-color: #b89c6c;
    line-height:40rpx;
    width: 240rpx;
    color: #fff;
    padding:20rpx;
    font-size: 24rpx;
}
.not-location .not-location-text-bottom{
    position: absolute;
    width: 750rpx;
    left: 0;
    bottom: 0;
    color:#bbbbbb;
    font-size: 24rpx;
    text-align: center
}
.not-location button {
    border-radius: 0;
}
.not-location  button::after{
    content:none;
    height:none;
}
.not-location  button[disabled][type="default"], wx-button[disabled]:not([type]){
    background:#d1ae87;
}