  margin: 0;
  width:100%;
  height: 375rpx;
}
.item-body-text{
  font-size:28rpx;
  color:#666666;
  letter-spacing:0;
  line-height:44rpx;
  text-align:left;
  margin-top: 16rpx;
  max-height:132rpx;
  overflow: hidden;
}
.item-groups{
  position: relative;
}
.item-after{
  position: absolute;
  left: 9rpx;
  top:9rpx;
  z-index: -1;
}
 
item-body{
  position: relative;
}
 
.item-delete-text{
  color:#bbbbbb;
  font-size: 28rpx;
  width:80rpx;
  margin-left: -17rpx;
  padding-left: 17rpx;
  margin-top: 10rpx;
}
.item-images{
  position: relative;
  z-index: 100;
}
.item-body-img{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}
.item-body-img-holder{
  position: absolute;
  left: 17rpx;
  top: 65.3rpx;
  opacity: 1;
}
.item-body-img-loaded{
  opacity: 1;
}

.item-body-img-loaded-holder{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}
.item-img{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}
.item-img-holder{
  position: absolute;
  left: 0;
  top: 0;
  opacity: 1
}
.item-img-loaded{
  opacity: 1;
}

.item-img-holder-loaded{
  opacity: 0;
  transition: opacity 0.5s linear 1s;
}
