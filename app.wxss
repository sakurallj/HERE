/**app.wxss**/
page{
  background:#F0F0F0;
 }
.clear{
    display: block;
    clear: both;
}
.none{
    display: none;
}
.body{
  width:750rpx;
  height:100%;
  box-sizing: border-box;
  text-align: left;
  font-family:"Helvetica Neue", Helvetica, Microsoft Yahei, Hiragino Sans GB, WenQuanYi Micro Hei, sans-serif;
  font-size: 14rpx;
  font-weight: 400;
  line-height: 1;
  overflow-x: hidden
}
.container {
  
} 
.header{
  background-image:linear-gradient(0deg, #2c2c30 1%, #0f1012 100%);
  width:750rpx;
  height:84rpx;
}
.header .title{
  font-size:37rpx;
  color:#c6aa7c;
  letter-spacing:0;
  text-align:center;
}
.warn-icon{
  width:50rpx;
  height:60rpx;
}
.search-icon{
  width:31rpx;
  height:38rpx;
}
.close-icon{
  width:37rpx;
  height:37rpx;
}
.edit-icon{
  width:50rpx;
  height:60rpx;
}
.location-icon{
  width:32rpx;
  height:32rpx;
}
.person-header{
  border: 1px solid rgba(153,153,153,.15);
}
.loading{
  display: inline-block;
}
.loading-icon{
  width:32rpx;
  height:32rpx;
  display:  block;
  padding-top: -12rpx;
  float: left;
}
.loading-text{
  margin-left: 10rpx;
  display:  block;
  float: left;
  padding-top: 5rpx;
}
.none-resp{
    color:#999999;
    text-align:center;
    margin-top: 200rpx;
    font-size:24rpx;
}
 
.not-more{
  color:#999999;
  text-align:center;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  font-size:24rpx;
}
.text-ellipsis{
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
}